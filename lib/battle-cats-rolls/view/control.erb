<% if controller.path_info == '/' %>
<div class="control">
  <label for="seed_input">Seed:</label>
  <input
    type="number" id="seed_input" name="seed"
    value="<%= controller.seed %>"
    onclick="this.select()">
  <input
    type="hidden" id="seed_next_input" name="next_seed"
    value="<%= controller.next_seed %>">

  <label for="details_input">Details:
    <input type="checkbox" id="details_input" name="details"
      <%= checked_details %>
      onchange="roll(this)">
  </label>

  <label for="count_input">Count:</label>
  <input
    type="number" id="count_input" name="count"
    min="1" max="999" value="<%= controller.count %>"
    onclick="this.select()">

  <input type="submit" value="Roll">
</div>
<% else %>
<%= hidden_inputs('seed', 'next_seed', 'details', 'count') %>
<% end %>
