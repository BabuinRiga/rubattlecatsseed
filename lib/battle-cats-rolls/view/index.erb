<table>
  <th>No.</th>
  <th>Seed</th>
  <th>Result</th>
  <th>Guaranteed</th>
  <th>Alt. result</th>
  <th>Alt. guaranteed</th>
  <th>Seed</th>
  <th>Alt. No.</th>

  <% each_ab_cat(arg) do |prev_b, (a, b), sequence| %>
    <tr>
      <td rowspan="2"><%= sequence %></td>
      <td><%= a.rarity_seed %></td>
      <td class="<%= a.color_label %>"><%= a.score %></td>
      <td rowspan="2">x</td>

      <% if prev_b %>
        <td class="<%= prev_b.color_label %>"><%= prev_b.name %></td>
        <td><%= prev_b.slot_seed %></td>
      <% else %>
        <td colspan="4"></td>
      <% end %>
    </tr>

    <tr>
      <td><%= a.slot_seed %></td>
      <td class="<%= a.color_label %>"><%= a.name %></td>

      <td class="<%= b.color_label %>"><%= b.score %></td>
      <td rowspan="2">x</td>
      <td><%= b.rarity_seed %></td>
      <td rowspan="2"><%= sequence %></td>
    </tr>
  <% end %>

  <tr>
    <td colspan="4"></td>

    <% last_b = arg.dig(-1, -1) %>
    <td><%= last_b.name %></td>
    <td><%= last_b.slot_seed %></td>
  </tr>
</table>
