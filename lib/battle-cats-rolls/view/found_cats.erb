<div id="found">
  <% if arg[:found_cats].any? %>
    <p>Found cats:</p>
  <% end %>
  <ul>
    <% arg[:found_cats].each do |(cat, a_or_b, guaranteed)| %>
      <li>
        <span class="<%= cat.color_label %>">
          <%= link_to_roll(cat) %>
        </span>:
        <%= "#{cat.sequence}#{(65 + a_or_b).chr}#{guaranteed}" %>
      </li>
    <% end %>
  </ul>
</div>
