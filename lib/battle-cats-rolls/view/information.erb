<div id="information">
  <% if details %>
    <p>Gacha information:</p>

    <ul>
      <li>
        Rare: <%= gacha.rare / 100 %>%
        (<%= gacha.rare_cats.size %> cats)
        <%= show_gacha_slots(gacha.rare_cats) %>
      </li>
      <li>
        SR: <%= gacha.sr / 100 %>%
        (<%= gacha.sr_cats.size %> cats)
        <%= show_gacha_slots(gacha.sr_cats) %>
      </li>
      <li>
        Uber: <%= gacha.ssr / 100 %>%
        (<%= gacha.uber_cats.size %> cats)
        <%= show_gacha_slots(gacha.uber_cats) %>
      </li>
    </ul>
  <% end %>
</div>
