<div id="form">
  <form method="get" enctype="application/x-www-form-urlencoded">
    <%= erb :options %>
    <%= erb :events %>
  </form>

  <p>
    Note that do not pick any guaranteed rolls. A guaranteed roll is
    either the 11th roll in a guaranteed event, or the 15th roll in a
    step up event.
  </p>

  <form method="post" action="//<%= seek_host %>/seek/enqueue"
    enctype="application/x-www-form-urlencoded">
    <ol>
      <% 10.times do %>
        <li>
          <select name="rolls[]">
            <option value="" selected="selected">Pick your roll</option>

            <optgroup label="Rare:">
              <% gacha.rare_cats.each.with_index do |cat, slot| %>
                <option value="0 <%= slot %>"><%= cat_name(cat) %></option>
              <% end %>
            </optgroup>

            <optgroup label="Super Rare:">
              <% gacha.sr_cats.each.with_index do |cat, slot| %>
                <option value="1 <%= slot %>"><%= cat_name(cat) %></option>
              <% end %>
            </optgroup>

            <optgroup label="Uber:">
              <% gacha.uber_cats.each.with_index do |cat, slot| %>
                <option value="2 <%= slot %>"><%= cat_name(cat) %></option>
              <% end %>
            </optgroup>
          </select>
        </li>
      <% end %>
    </ol>

    <input type="hidden" name="event" value="<%= controller.event %>">
    <input type="hidden" name="lang" value="<%= controller.lang %>">
    <input type="hidden" name="name" value="<%= controller.name %>">
    <input type="submit" value="Seek">
  </form>
</div>
