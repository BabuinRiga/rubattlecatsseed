<div id="form">
  <form method="get" enctype="application/x-www-form-urlencoded">
    <%= erb :events %>
  </form>

  <form method="post" action="//<%= seek_host %>/seek/enqueue"
    enctype="application/x-www-form-urlencoded">
    <ol>
      <% 10.times do %>
        <li>
          <select name="rolls[]">
            <option value="" selected="selected">Pick your roll</option>

            <optgroup label="Rare:">
              <% arg[:rare_names].each.with_index do |name, slot| %>
                <option value="0 <%= slot %>"><%= name %></option>
              <% end %>
            </optgroup>

            <optgroup label="Super Rare:">
              <% arg[:sr_names].each.with_index do |name, slot| %>
                <option value="1 <%= slot %>"><%= name %></option>
              <% end %>
            </optgroup>

            <optgroup label="Uber:">
              <% arg[:uber_names].each.with_index do |name, slot| %>
                <option value="2 <%= slot %>"><%= name %></option>
              <% end %>
            </optgroup>
          </select>
        </li>
      <% end %>
    </ol>

    <input type="hidden" value="<%= event %>">
    <input type="submit" value="Seek">
  </form>
</div>
