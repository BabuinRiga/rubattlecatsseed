#!/bin/sh

root=$(realpath $(dirname $0)/..)
chown -R godfat:godfat $root/data $root/build

user_git(){
  sudo -u godfat git -C $root $*
}

user_git add .
user_git stash
user_git pull
user_git stash pop
user_git reset

chown -R bcat:bcat $root/data $root/build
sudo -u bact ruby $root/bin/cleanup-apk.rb
